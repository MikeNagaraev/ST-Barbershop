<div class="modal fade" id="enrollModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form class="form-horizontal">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="js-title-step"></h4>
                </div>
                <div class="modal-body">
                    <div class="row hide" data-step="1" data-title="Введите имя и телефон:">
                        <div class="form-group">
                            <label class="control-label col-sm-offset-2 col-sm-2" for="name">Имя:</label>
                            <div class="col-sm-6">
                                <% if current_user %>
                                <input type="text" class="form-control" id="name" placeholder="Введите имя..." value="<%=current_user.name%>">
                            <% else %>
                                <input type="text" class="form-control" id="name" placeholder="Введите имя...">
                                <% end %>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-offset-2 col-sm-2" for="phone">Телефон:</label>
                            <div class="col-sm-6">
                                <% if current_user %>
                                <input type="tel" class="form-control" id="tel" placeholder="Введите телефон..." value="<%= current_user.name%>">
                            <% else %>
                                <input type="tel" class="form-control" id="tel" placeholder="Введите телефон...">
                                <%end %>
                            </div>
                        </div>
                    </div>
                    <div class="row hide" data-step="2" data-title="Выберете парикмахера:">

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default js-btn-step pull-left" data-orientation="cancel" data-dismiss="modal"></button>
                    <button type="button" class="btn btn-warning js-btn-step" data-orientation="previous"></button>
                    <button type="button" class="btn btn-success js-btn-step" data-orientation="next"></button>
                </div>
            </div>
        </form>
    </div>
</div>
