<div class="container">
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-5 col-sm-offset-2 col-md-offset-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h2 class="panel-title">Регистрация</h2>
                </div>
                <div class="panel-body">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= devise_error_messages! %>
                    <div class="form-group">
                        <input autofocus="autofocus" type="text" name="user[name]" id="user_name" class="form-control input-lg" placeholder="Имя...">
                    </div>

                    <div class="form-group">
                        <input class="form-control input-lg" placeholder="Эл. адрес..." type="email" name="user[email]" id="user_email">
                    </div>
                    <!--
            <div class="form-group">
              <input  class="form-control input-lg" placeholder="Enter phone..." type="phone" name="user[phone]" id="user_phone">
            </div> -->

                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">

                                <input autocomplete="off" class="form-control input-lg" type="password" name="user[password]" id="user_password" placeholder="Пароль...">
                            </div>

                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input autocomplete="off" class="form-control estimate-password input-lg" type="password" name="user[password_confirmation]" id="user_password_confirmation" placeholder="Подтверждение...">
                            </div>
                        </div>
                    </div>

                    <input type="submit" value="Зарегистрироваться" class="btn btn-info btn-block">

                    <% end %>
                    <hr>
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>
