<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
    <div class="row centered-form">
        <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title"><%='Войти'%></div>
                    <div class="panel-help">
                        <a href="<%=new_password_path(resource_name)%>">Забыли пароль?</a>
                    </div>
                </div>

                <div class="panel-body">
                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">
                            <i class="glyphicon glyphicon-user"></i>
                        </span>
                        <input autocomplete="off" autofocus="autofocus" class="form-control" placeholder="Эл. адрес..." type="email" name="user[email]" id="user_email">
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">
                            <i class="glyphicon glyphicon-lock"></i>
                        </span>
                        <input autocomplete="off" class="form-control" type="password" name="user[password]" id="user_password" placeholder="Пароль...">
                    </div>
                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                                <input id="login-remember" type="checkbox" name="remember" value="1">
                                Запомнить меня
                            </label>
                        </div>
                    </div>
                    <div style="margin-top:10px" class="form-group">
                        <div class="col-sm-12 controls text-center">
                            <input type="submit" value="Войти" class="btn btn-info btn-block">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 control"><br>
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                Нету аккаунта!
                                <a href="<%= new_user_registration_path%>" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                                    Зарегистрироваться
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%end%>
