<main class="user-page">
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <a href="#" class="btn btn-danger btn-block btn-enroll" data-toggle="modal" data-target="#enrollModal">
                  Записаться
                </a>
                <ul class="nav nav-pills nav-stacked nav-tabs nav-menu" id="profile-menu">
                    <li class="active">
                        <a href="#profile" data-toggle="tab">
                            <i class="fa fa-user"></i>
                            Мой профиль
                        </a>
                    </li>
                    <% if current_user.has_role? :moderator %>
                    <li>
                        <a href="#schedule"  data-toggle="tab">
                            <i class="fa fa-table"></i>
                            Расписание
                        </a>
                    </li>
                    <%else %>
                    <li>
                        <a href="#statistics" data-toggle="tab">
                            <i class="fa fa-line-chart"></i>
                            Статистика
                        </a>
                    </li>
                    <%end%>
                    <li>
                        <a href="#settings" data-toggle="tab">
                            <i class="fa fa-pencil-square-o"></i>Настройки
                        </a>
                    </li>
                    <li>
                        <a href="<%= destroy_user_session_path%>" data-method="delete" data-confirm="Вы уверены?">
                            <i class="glyphicon glyphicon-log-out"></i>
                            Выход
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-sm-9 tab-content">
                <div class="menu-content tab-pane" id="profile">
                    <%= render "users/profile" %>
                </div>
                <div class="menu-content tab-pane" id="statistics">
                    <%= render "users/statistics" %>
                </div>
                <div class="menu-content tab-pane" id="schedule">
                    <%= render "users/schedule" %>
                </div>
                <div class="menu-content tab-pane" id="settings"></div>
            </div>
        </div>
    </div>
</main>
